@supports (display: grid)
	.news
		display: grid
		grid-gap: 2rem 1.875rem
		grid-template-columns: repeat(3,1fr)

		&-slider
			width: 100% !important

		&-slider-container
			grid-column: span 2
			grid-row: span 2
			margin-bottom: 0 !important

.main
	.news
		display: block

.ie-fix
	.news
		&:after
			content: ''
			display: block
			clear: both

		&-slider
			width: 100%
			margin-right: 0

		&__item
			width: 48%
			float: left
			margin: 0 0 20px 28px


.news
	&-slider
		position: relative
		width: calc(100% - 480px)
		margin-right: 40px
		display: flex


		.swiper-button-next
			margin-left: 20px


		&__label
			padding: 15px
			border-radius: 25px
			background: var(--backgroundColor)
			line-height: 1
			color: #000
			margin: 55px 0 0 70px



		&__title
			font-size: rem(20)
			font-weight: 500
			width: 100%

		&__date 
			font-size: rem(14)
			color: #CAB1A6
			margin-top: 15px


		&--right
			display: flex 
			flex-direction: column
			margin-bottom: -40px

			.news__item
				margin-bottom: 40px

		&-container
			display: flex
			margin-bottom: 40px

		&__info
			&-cont
				display: flex
				width: 100%
				background-color: var(--mainColor)
				background-image: url('../img/soti-bg.png')
				background-position: center
				background-repeat: no-repeat
				color: #fff
				padding: 25px 25px 40px 60px

			&-img
				width: 46px
				height: 87px
				margin-right: 40px
				flex: none

				.ico
					height: 100%

				svg 
					fill: #fff
			

		&__item
			position: relative

			img 
				display: block
				width: 100%
				height: 100%
				object-fit: cover 
				object-position: center

			&-cont
				position: absolute
				top: 0
				left: 0
				width: 100%
				height: 100%
				display: flex 
				flex-direction: column
				justify-content: space-between
				align-items: flex-start

	&__item
		position: relative
		display: flex
		flex-direction: column
		justify-content: space-between
		align-items: flex-start
		background-color: var(--backgroundColor)
		padding: 40px 50px
		flex: 1 1 auto
		overflow: hidden

		&:hover
			.news__item-logo
				animation: start 2s forwards

		// &:not(:hover)
		// 	.news__item-logo
		// 		animation: start 2s forwards


		&-logo
			position: absolute
			top: 0
			right: 20px
			z-index: 1
			width: 80px
			height: 148px
			transform: translateY(-30%)
			z-index: 0




			svg
				fill: #E1E7ED



		&-label 
			border-radius: 25px
			background: #E9EDF2
			padding: 10px 16px
			line-height: 1
			margin-bottom: 20px

		&-title 
			font-size: rem(16)
			font-weight: 500
			width: 100%
			z-index: 10

		&-date 
			margin-top: 20px

	&__list
		display: flex 
		flex-wrap: wrap
		margin: 0 0 -40px -40px

		&-btn
			width: 100%
			text-align: center


		.news__item
			width: calc((100% - 40px * 3) / 3)
			margin: 0 0 40px 40px
			flex: none


	
@keyframes start
	0%
		transform: translateY(-30%)
	30%
		transform: translateY(-100%)
	31%
		transform: translateY(170%)

	100%
		transform: translateY(-30%)


@media screen and (max-width: 1500px)

	.news-slider
		&__label
			margin: 30px 0 0 30px
		
		&__info-cont
			padding: 20px 20px 20px 30px

@media screen and (max-width: 1200px)

	@supports (display: grid)
		.news
			grid-template-columns: repeat(2,1fr)

			&-slider-container
				grid-column: span 2

			&-slider
				margin-bottom: 0 !important
				height: 100%

	
	.news-slider
		width: 100%
		margin-bottom: 30px

		&-container
			flex-direction: column
			margin-bottom: 30px

		&--right
			flex-direction: row
			margin: 0 0 -30px -30px

			.news__item
				width: calc((100% - 30px * 2) / 2)
				margin: 0 0 30px 30px

	.news__list 
		margin: 0 0 -30px -30px

		.news__item
			width: calc((100% - 30px * 2) / 2)
			margin: 0 0 30px 30px

	.news__item
		padding: 20px

@media screen and (max-width: 667px)

	.tags-mobile
		display: none


	.contests_menu1
		flex-direction: column



	.news
		display: flex !important
		flex-direction: column

		> *
			&:not(:first-child)
				margin-top: 20px

		&-slider
			&-container
				margin-top: 30px
				height: 450px




	.news-slider

		.main-slider__nav
			top: -40px
			right: 0
		
		&__label
			padding: 9px 15px
			margin: 20px 0 0 20px


		&__info
			&-img
				display: none


			&-cont
				padding: 20px

		&__title 
			line-height: 1.4
			font-size: 1rem



		&--right
			flex-wrap: wrap
			.news__item
				width: 100%
				margin: 0 0 30px 30px
				padding: 20px

	.news__list
		margin: 0

		.news__item
			width: 100%
			margin: 0 0 30px 
			padding: 20px

	.news__item
		padding: 20px

		&-logo
			right: 0
			width: 50px
			transform: translateY(-37%)


