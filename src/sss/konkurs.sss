.concourse-info
	&__preview
		background-color: var(--backgroundColor)
		padding: 40px 55px

	&__table
		table
			width: 100%
			table-layout: fixed

		th
			font-weight: bold

		th, td
			border: 1px solid var(--backgroundColor)
			padding: 30px 20px
			text-align: center

.concourse__preview

	&-top
		display: flex
		justify-content: space-between
		margin-bottom: 40px

	&-company
		background-color: #E1E7ED
		border-radius: 25px
		padding: 10px 20px

	&-text
		max-width: 860px
		font-size: rem(16)

	&-bot
		margin-top: 40px
		display: flex

	&-date
		color: var(--mainColor)
		margin-right: 30px

		&--old
			color: #9BAABB


@media screen and (max-width: 1500px)
	
	.concourse-form, .concourse-info__preview
		padding: 25px

	.forms-bot
		margin: 25px 0 0

	.concourse-filter
		margin: 60px 0 25px

	.concourse__preview-top
		margin-bottom: 25px

	.concourse__preview-bot
		margin-top: 25px

	.concourse-info__table 
		td, th
			padding: 20px 5px


	@supports (display: grid)

		.concourse-form .forms-wrap
			grid-gap: 20px

@media screen and (max-width: 1200px)

	@supports (display: grid)

		.concourse-form .forms-wrap
			display: grid
			grid-template-columns: 1fr 1fr


@media screen and (max-width: 1000px)
	
	.concourse-info__table 
		td, th
			padding: 5px
			font-size: 12px


@media screen and (max-width: 667px)

	.concourse
		margin: 0 -20px

	.search-row
		position: relative
		padding: 20px

		.forms__input
			width: 100%
			margin: 0
			padding: 0 100px 0 20px

		.btn
			position: absolute
			top: 20px
			right: 20px
			height: 45px

	.concourse-filter
		margin: 40px 0 10px
		flex-direction: column
		padding: 0

		.sort
			display: none

		.paginator
			justify-content: center

	.concourse__preview
		&-top, &-bot
			flex-direction: column
			align-items: flex-start

		&-company
			margin-bottom: 20px

	.concourse-info
		&__table
			overflow-x: auto
			-webkit-overflow-scrolling: touch
			margin: 20px

			table
				min-width: 170vw
				table-layout: auto



	@supports (display: grid)

		.forms-wrap
			margin: 0 !important

		.concourse-form 
			.forms-wrap
				display: grid
				grid-template-columns: 1fr

		.forms__input-cont
			margin: 0 !important

		.concourse .forms-bot
			justify-content: center