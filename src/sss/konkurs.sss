.search-row
	background-color: var(--mainColor)
	padding: 27px 55px
	display: flex
	align-items: center

	.forms
		&__input
			width: calc(100% - 160px)
			margin-right: 40px
			height: 45px
			min-height: 45px

	.btn
		margin-left: auto

	&-cont

.concourse
	&-form
		background-color: var(--backgroundColor)
		padding: 40px 55px


	.forms

		&-wrap
			align-items: flex-end

		&__input
			background-color: #fff
		
			
			&-item
				display: flex
				flex-direction: column-reverse
				max-width: 170px

				&:not(:first-child)
					margin-left: 40px

			&-cont
				width: calc((100% - 40px * 5) / 5)
				margin: 0 0 40px 40px

				&--calendar
					
					.forms__input
						background-image: url('../img/ico-calendar.svg')
						background-position: right 20px center
						background-repeat: no-repeat
						padding: 0 50px 0 30px 


		&-bot
			justify-content: flex-start

			.btn
				&:not(:last-child)
					margin-right: 30px

				&:nth-child(2)
					background-color: transparent
					border: 1px solid #9BAABB !important
					color: #9BAABB


@supports (display: grid)

	.concourse
		&-form

			.forms-wrap
				display: grid
				// grid-template-columns: repeat(6, 1fr)
				// grid-template-columns: .5fr .5fr 1fr 240px 240px
				grid-template-columns: repeat(4, 1fr)
				grid-gap: 40px
				margin: 0

			.forms__input
				width: 100%

				&-cont
					width: 100%
					margin: 0
					align-self: stretch



.concourse-filter
	margin: 90px 0 30px
	display: flex
	justify-content: space-between

	.sort-cout
		display: flex
		align-items: center

		&__text
			margin-right: 25px

		&__link
			display: inline-block
			size: 46px
			border-radius: 50%
			background-color: var(--backgroundColor)
			color: #9BAABB
			margin-right: 15px
			text-decoration: none
			text-align: center
			line-height: 46px

			&.active
				background: var(--secondColor)
				color: #fff

		.btn
			background-color: var(--mainColor)
			color: #fff

