	&-pass
		margin-top: 50px

		.forms
			&__title
				font-size: rem(22)
				font-weight: 600
				margin-bottom: 20px

			&__text 
				color: #9BAABB
				font-size: rem(14)
				max-width: 600px
				margin-bottom: 20px

