.acved
	.inn-form
		.input-inn
			max-width: 490px
			width: 100%
			border-radius: 50px
			height: 45px
			border: 0
			padding: 0 25px
			margin-right: 43px
			border: 1px solid var(--mainColor)

		input[type=submit]
			display: inline-block
			padding: 15px 25px
			line-height: 1!important
			background: var(--secondColor)
			border-radius: 25px!important
			border: 0!important
			color: #fff
			transition: background .3s ease


.support-num

	&:not(:first-child)
		margin: 25px 0 0

.lk
	display: flex

	&-aside
		margin-right: 80px
		flex: 1 1 auto


		&__links
			background: var(--backgroundColor)
			position: sticky
			top: 10px

		&__link
			display: block
			padding: 22px 45px
			transition: background .3s ease, color .3s ease


			&.active, &:hover 
				background: var(--mainColor)
				color: #fff

	&-cont

		&.inn_support_b24
			margin: 50px 0 0

		&:not(.inn_support_b24)
			width: calc(100% - 480px)

		&-name
			display: flex
			flex-direction: column
			align-items: flex-end

		&-title
			display: flex
			justify-content: space-between
			margin-bottom: 35px


			span
				font-size: rem(22)
				font-weight: 600

			.convert
				position: relative
				line-height: 1
				display: flex
				align-items: center

				&:before 
					content: ''
					display: inline-block
					margin-right: 15px
					size: 24px
					background-color: var(--secondColor)
					border-radius: 50%
					background-image: url('../img/ico-group.svg')
					background-position: center
					background-repeat: no-repeat

	&-treatment
		&__list
			margin-bottom: -40px

		&__item
			border: 1px solid var(--backgroundColor)
			margin-bottom: 40px

			&-top
				display: flex 
				justify-content: space-between
				padding: 20px 50px
				background: var(--backgroundColor)

			&-title
				font-size: rem(16)
				font-weight: 600

			&-info
				&-cont
					padding: 30px 50px

			&-docs
				a
					display: block

					&:hover
						color: var(--secondColor)
				> *
					&:not(:first-child)
						margin-top: 10px
		&__info
			display: flex
			justify-content: space-between
			color: #9BAABB
			font-size: rem(14)
			margin-bottom: 10px

	.status
		position: relative
		display: flex
		align-items: center
		line-height: 1

		span
			position: relative
			size: 26px
			border-radius: 50%
			display: inline-block
			margin-right: 13px
			flex: none


		&--completed

			span
				background: #E1E7ED

				&:after 
					content: ''
					position: absolute
					size: 4px 10px
					transform: rotate(45deg)
					display: block
					position: absolute
					left: calc(50% - 2px)
					top: calc(50% - 5px)
					border-right: 1px solid #000 
					border-bottom: 1px solid #000

		&--expertiza-completed
			span
				background: #92CE83

				&:after 
					content: ''
					position: absolute
					size: 4px 10px
					transform: rotate(45deg)
					display: block
					position: absolute
					left: calc(50% - 2px)
					top: calc(50% - 5px)
					border-right: 1px solid #fff 
					border-bottom: 1px solid #fff

		&--support-no 
			span
				background-color: #EB4646
				background-image: url('../img/ico-cross.svg')
				background-position: center
				background-repeat: no-repeat

		&--await
			span
				background-color: #C39367
				background-image: url('../img/ico-refresh.svg')
				background-position: center
				background-repeat: no-repeat


	&-treatment-no
		background: var(--backgroundColor)
		padding: 65px 80px 80px


		&__title 
			font-size: rem(18)
			font-weight: 600
			margin-bottom: 25px

		&__btn 
			margin-top: 35px


